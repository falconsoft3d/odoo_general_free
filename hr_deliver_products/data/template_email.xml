<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_deliver_products2" model="mail.template">
            <field name="name">Entregas / Retiros: Enviar por correo electr√≥nico</field>
            <field name="model_id" ref="hr_deliver_products.model_deliver_products"/>
            <field name="email_from">${object.user_id.email_formatted|safe}</field>
            <field name="partner_to">${object.employee_id.address_home_id.id}</field>
            <field name="report_template" ref="action_deliver_products_saleorder"/>
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.employee_id.address_home_id.lang}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Estimado(a) ${object.employee_id.name}, se adjunta se envia el reporte.    
                    </p>
                </div>
            </field>
            <field name="subject">${object.employee_id.address_home_id.company_id.name} ${object.type in ('retiro',) and 'Retiro' or ''} ${object.type in ('translado',) and 'Transferencia' or ''} ${object.type in ('entrega',) and 'Entrega' or ''} (Ref.${object.name or 'n/a' })
            </field>
        </record>
    </data>
</odoo>
