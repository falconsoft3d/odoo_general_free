<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_deliver_products_company" model="ir.ui.view">
        <field name="name">view.hr.deliver.products.company</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Productos a Empleados">
                    <group>
                        <group string="Ubicación de Entrega">
                            <field name="ubication_deliver_id" required="1"/>
                            <field name="ubication_deliver_dest_id" required="1"/>
                        </group>
                        <group string="Ubicación de Retiro">
                            <field name="ubication_retry_id" required="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
